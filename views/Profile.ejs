<div class="container mt-5 overflow-hidden">
  <h2>User Profile</h2>
  <table class="table table-hover table-sm table-properties">
    <tr>
      <th>Name</th>
      <td><%= user.name %></td>
    </tr>

    <tr>
      <th>User Type</th>
      <td><%= user.type %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= user.email %></td>
    </tr>
    <tr>
      <th>Phone number</th>
      <td>
        <%= user.phone %>
        <span class="mx-3"
          ><a
            style="color: #007bff;"
            data-placement="bottom"
            data-html="true"
            data-title="Update phone"
            data-toggle="popover-phone"
            ><i class="fas fa-edit"></i> </a
        ></span>
        <div id="profile-phone" class="d-none">
          <form
            method="POST"
            action="user/profile/phone/<%= user._id %>?_method=PUT"
          >
            <div class="form-row align-items-center">
              <div class="col-auto my-1">
                <label class="sr-only" for="inlineFormInputName">Phone</label>
                <input
                  type="number"
                  class="form-control"
                  placeholder="Phone"
                  name="phone"
                />
              </div>
              <div class="col-auto my-1">
                <button type="submit" class="btn btn-warning">Update</a>
              </div>
            </div>
          </form>
        </div>
      </td>
    </tr>
    <tr>
      <th>Bio</th>
      <td>
        <%= user.bio %>

        <span class="mx-3"
        ><a
          style="color: #007bff;"
          data-placement="bottom"
          data-html="true"
          data-title="Update bio"
          data-toggle="popover-bio"
          ><i class="fas fa-edit"></i> </a
      ></span>
      <div id="profile-bio" class="d-none">
        <form
          method="POST"
          action="user/profile/bio/<%= user._id %>?_method=PUT"
        >
          <div class="form-row align-items-center">
            <div class="col-auto my-1">
              <label class="sr-only" for="inlineFormInputName">Bio</label>
              <input
                type="text"
                class="form-control"
                placeholder="Bio"
                name="bio"
              />
            </div>
            <div class="col-auto my-1">
              <button type="submit" class="btn btn-warning">Update</a>
            </div>
          </div>
        </form>
      </div>
      </td>
    </tr>
  </table>

  <hr class="mb-4"/>
<% if(user.type === "admin"){ %> 
<h2>Management Controls</h2>
  <table class="table table-hover table-sm table-properties">
    <tr>
      <td>  <h5>Change user access level</h5>
      </td>
    </tr>
