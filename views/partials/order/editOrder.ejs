<style>
  .container {
    width: 50%;
    margin: auto;
    padding-top: 20px;
  }
  .container h1 {
    text-align: center;
    font-weight: bold;
    text-transform: uppercase;
    color: tomato;
  }
  .container h1 span {
    font-weight: lighter;
  }
  .input-group {
    margin: 20px;
  }
</style>
<div class="container">
  <h1>Edit<span>Order</span></h1>
  <form action="/orders/api/<%= order._id%>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">Order Name</label>
      <input
        type="text"
        name="name"
        class="form-control"
        value="<%= order.name %>"
        placeholder="Order name"
      />
    </div>
    <div class="form-group">
      <label for="customer">Customer</label>
      <select
        class="custom-select mr-sm-2"
        name="customer"
        id="inlineFormCustomSelect"
      >
        <option selected><%=order.customer %> </option>
        <% customers.forEach(cust=>{ %>
        <option value="<%=cust.CustomerName %> "
          ><%=cust.CustomerName %></option
        >

        <% }) %>
      </select>
    </div>

    <div class="form-group">
      <label for="type">Product Name</label>
      <select class="custom-select product mr-sm-2"  name="pname" id="pname">
        <option selected ><%= order.productName %></option>
        <% products.forEach(prod=>{ %>
        <option value="<%=prod.ProductName %> "><%=prod.ProductName %></option>

        <% }) %>
      </select>

    <div class="form-group">
      <label for="type">Order price</label>
      <input
        type="number"
        class="form-control"
        placeholder="Please enter a price"
        name="price"
        value="<%= order.price %>"
      />
    </div>

    <div class="form-group">
      <label for="type">Total amount</label>
      <input
        type="number"
        class="form-control"
        placeholder="Please enter an amount"
        name="amount"
        value="<%= order.totalAmount%>"
      />
    </div>
    <div class="form-group">
      <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Status</label>
      <select
        class="custom-select my-1 mr-sm-2"
        id="inlineFormCustomSelectPref"
        name="status"
        value="<%= order.status %> "
      >
        <option selected>Select..</option>
        <option value="Pending Payment">Pending Payment</option>
        <option value="Processing">Processing</option>
        <option value="On Hold">On hold</option>
        <option value="Completed">Completed</option>
        <option value="Cancelled">Cancelled</option>
        <option value="Refunded">Refunded</option>
        <option value="Failed">Failed</option>
      </select>
    </div>

    <div class="input-group">
      <button type="submit" class="btn btn-outline-success w-75 m-auto">
        Update order
      </button>
    </div>
  </form>
</div>
