<style>
  .container {
    width: 50%;
    margin: auto;
    padding-top: 20px;
  }
  .container h1 {
    text-align: center;
    font-weight: bold;
    text-transform: uppercase;
    color: tomato;
  }
  .container h1 span {
    font-weight: lighter;
  }
  .input-group {
    margin: 20px;
  }
</style>
<div class="container">
  <form action="">
    <h1><%if(user.type === "admin"){ %></h1>
    <button type="submit" id="edit-order">Edit order</button>
  </form>
  <%} %>
  <h1>Add <span>Order</span></h1>
  <form action="/orders" method="POST">
    <div class="form-group">
      <label for="name">Order Name</label>
      <input
        type="text"
        name="name"
        class="form-control"
        placeholder="Order name"
      />
    </div>
    <div class="form-group">
      <label for="type">Customer</label>
      <select
        class="custom-select mr-sm-2"
        name="customer"
        id="inlineFormCustomSelect"
      >
        <option selected>Choose...</option>
        <% customers.forEach(cust=>{ %>
        <option value="<%=cust.CustomerName %> "
          ><%=cust.CustomerName %></option
        >

        <% }) %>
      </select>
    </div>
    <div class="form-group">
      <label for="type">Order type</label>
      <input type="text" class="form-control" placeholder="Type" name="type" />
    </div>
    <div class="form-group">
      <label for="type">Order Description</label>
      <input
        type="text"
        class="form-control"
        placeholder="Please enter a order description"
        name="description"
      />
    </div>

    <div class="form-group">
      <label for="type">Order price</label>
      <input
        type="number"
        class="form-control"
        placeholder="Please enter a price"
        name="price"
      />
    </div>
    <div class="form-group">
      <label for="type">Total amount</label>
      <input
        type="number"
        class="form-control"
        placeholder="Please enter an amount"
        name="amount"
      />
    </div>
    <div class="form-group">
      <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Status</label>
      <select
        class="custom-select my-1 mr-sm-2"
        id="inlineFormCustomSelectPref"
        name="status"
      >
        <option selected>Select..</option>
        <option value="Pending Payment">Pending Payment</option>
        <option value="Processing">Processing</option>
        <option value="On Hold">On hold</option>
        <option value="Completed">Completed</option>
        <option value="Cancelled">Cancelled</option>
        <option value="Refunded">Refunded</option>
        <option value="Failed">Failed</option>
      </select>
    </div>

    <div class="input-group">
      <button type="submit" class="btn btn-outline-success w-75 m-auto">
        Add Order
      </button>
    </div>
  </form>
</div>

<script>
  var editOrder = document.getElementById("edit-order");
</script>
