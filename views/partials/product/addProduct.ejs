<style>
  .container {
    width: 50%;
    margin: auto;
    padding-top: 20px;
  }
  .container h1 {
    text-align: center;
    font-weight: bold;
    text-transform: uppercase;
    color: tomato;
  }
  .container h1 span {
    font-weight: lighter;
  }
  .input-group {
    margin: 20px;
  }
</style>
<div class="container">
  <h1>Add <span>Product</span></h1>
  <form action="/api/products" method="POST">
    <div class="form-group">
      <label for="name">Product Name</label>
      <input
        type="text"
        name="productName"
        class="form-control"
        placeholder="Product name"
      />
    </div>
    <div class="form-group">
      <label for="type">Product Description</label>
      <input
        type="textarea"
        class="form-control"
        placeholder="Product Description"
        name="productDescription"
      />
    </div>
    <div class="form-group">
      <label for="type">Product Price</label>
      <input
        type="number"
        class="form-control"
        placeholder="Product Price"
        name="productPrice"
      />
    </div>

    <div class="form-group">
      <label for="type">Product Category</label>
      <select class="custom-select mr-sm-2" name="productCategory">
        <option selected>Choose...</option>
        <% category.forEach(name=>{ %>
        <option value="<%=name.categoryName %> "
          ><%=name.categoryName %></option
        >

        <% }) %>
      </select>
    </div>
    <div class="form-group">
      <label for="type">Product Thumbnail</label>
      <input
        type="text"
        class="form-control"
        placeholder="Product Thumbnail"
        name="productThumbnail"
      />
    </div>

    <div class="input-group">
      <button type="submit" class="btn btn-outline-success w-75 m-auto">
        Add Product
      </button>
    </div>
  </form>
</div>

