<div class="container mb-5">
  <div class="row">
    <% if(user.type.trim()==="admin"){ %>
    <div class="col-xs-12 col-sm-4">
      <div class="resource-box alert-success">
        <h5>List of Active accounts</h5>
        <h2><%=onlineAccounts %></h2>
      </div>
    </div>
    <% } %>
    <div class="col-xs-12 col-sm-4">
      <div class="resource-box alert-success">
        <div class="card-block">
          <h5>Refund a customer</h5>
          <button
            type="button"
            class="btn btn-primary"
            data-toggle="modal"
            data-target="#exampleModal"
          >
            Issue a refund
          </button>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="resource-box alert-success">
        <div class="card-block">
          <h5>Give a feedback</h5>
          <button
            type="button"
            class="btn btn-primary"
            data-toggle="modal"
            data-target="#feedback-modal"
          >
            Feedback form
          </button>
        </div>
      </div>
    </div>
    <% if(user.type=="admin"){ %>
    <div class="col-xs-12 col-sm-4">
      <div class="resource-box alert-success">
        <div class="card-block">
          <a href="/troubleshoot" class="btn btn-primary">
            TroubleShoot
          </a>
        </div>
      </div>
    </div>
    <% } %> <% if(user.type.trim()==="admin"||user.type.trim()==="ordermgmtU"){
    %>
    <div class="col-xs-12 col-sm-4">
      <div class="resource-box alert-success">
        <div class="card-block">
          <button
            id="resource-category"
            type="button"
            class="btn btn-primary btn-default"
            data-toggle="modal"
            data-target="#category-modal"
          >
            Create a category
          </button>
        </div>
      </div>
      <% } %>

      <!-- Category Modal -->
      <div id="category-modal" class="modal fade" role="dialog">
        <div class="modal-dialog">
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">
                &times;
              </button>
              <h4 class="modal-title">Create a category</h4>
            </div>
            <div class="modal-body">
              <form method="POST" action="/category/add">
                <input
                  class="form-control mb-2"
                  type="text"
                  name="category"
                  placeholder="Create a category"
                />
                <button type="submit" class="btn btn-warning mt-2">
                  Create
                </button>
              </form>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal -->
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        role="dialog"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Refund</h5>
            </div>
            <div class="modal-body">
              <form>
                <div class="form-group">
                  <label for="text">Customer</label>

                  <select name[]="cust" id="cust">
                    <% cust.forEach(option=>{%>
                    <option value="<%=option.CustomerName%>"
                      ><%=option.CustomerName%></option
                    >
                    <%})%>
                  </select>
                </div>
                <div class="form-group">
                  <label for="pwd">Refund amount:</label>
                  <input
                    type="number"
                    name="refundAmt"
                    class="form-control"
                    id="pwd"
                  />
                </div>

                <button
                  class="btn btn-secondary"
                  type="submit"
                  class="btn btn-default"
                >
                  Submit
                </button>
              </form>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Feeback Modal -->

      <div
        class="modal fade"
        id="feedback-modal"
        tabindex="-1"
        role="dialog"
        aria-labelledby="feedback-modalTitle"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">
                Feedback form
              </h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <section>
                <div>
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
                          <div>
                            <h2>CONTACT US</h2>
                          </div>
                          <form
                            method="post"
                            action="/resource/feedback"
                            data-form-title="CONTACT US"
                          >
                            <div class="form-group">
                              <input
                                type="text"
                                class="form-control"
                                name="name"
                                required=""
                                placeholder="Name*"
                                data-form-field="Name"
                              />
                            </div>
                            <div class="form-group">
                              <input
                                type="email"
                                class="form-control"
                                name="email"
                                required=""
                                placeholder="Email*"
                                data-form-field="Email"
                              />
                            </div>
                            <div class="form-group">
                              <input
                                type="text"
                                class="form-control"
                                name="subject"
                                placeholder="Subject"
                                data-form-field="Subject"
                              />
                            </div>
                            <div class="form-group">
                              <textarea
                                class="form-control"
                                name="message"
                                placeholder="Message"
                                rows="7"
                                data-form-field="Message"
                              ></textarea>
                            </div>
                            <div>
                              <button
                                type="submit"
                                class="btn btn-lg btn-danger"
                              >
                                CONTACT US
                              </button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </section>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
