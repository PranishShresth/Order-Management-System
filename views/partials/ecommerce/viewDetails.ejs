<div class="container mt-2">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <img src="<%=products.productThumbnail %> " class="img-fluid" />
      </div>
      <div class="col-md-6">
        <h3><%= products.productName%></h3>

        <p class="text-justify overflow-auto">
          <%=products.productDescription%>
        </p>
        <br />
        <h4 class="price">
          Current price: <span>$<%=products.productPrice %> </span>
        </h4>
        <br />

        <h5>Category: <span> <%=products.productCategory %> </span></h5>
        <br />
        <form
          action="/product/viewlater/<%=products.productName %>&<%=products._id%>&<%=products.productPrice%>"
          method="GET"
        >
        
            <button class="btn btn-secondary">
              <i class="fas fa-heart"></i>Watch it later
            </button>
          </h4>
        </form>
        <div class="w-50">
        <a href="/cart/add-to-cart/<%=products._id %> " class="btn btn-default" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>
      </div>
      </div>
    </div>
  </div>
</div>
