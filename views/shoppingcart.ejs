<div class="container">
  <h1><%=title %></h1>
  <table class="table table-hover">
    <tbody>
      <%products.forEach(product=>{%>

      <tr>
        <td>
          <img
            src="<%= product.Product.productThumbnail%>"
            style="height: 80px; width: 80px;"
          />
        </td>
        <td><%= product.Product.productName %></td>

        <td><%= product.Product.productPrice %></td>

        <td><%= product.Quantity %></td>
        <td><%= product.Quantity *product.Product.productPrice%></td>
      </tr>
      <%}) %>
    </tbody>
    <tfoot>
      <tr>
        <td></td>

        <td></td>
        <td></td>

        <td>
          <div class="row">
            <div class="col">
              Total: $<%var prices=[];
              products.forEach(product=>{prices.push(product.Quantity
              *product.Product.productPrice)} )%> <%=
              prices.reduce((a,b)=>a+b,0) %>
            </div>
            <div class="col">
              <form action="/cart/checkout" method="GET">
                <button type="submit" class="btn btn-primary">Checkout</button>
              </form>
            </div>
          </div>
        </td>
      </tr>
    </tfoot>
  </table>
</div>
