<div class="container">
  <style>
    .container {
      width: 50%;
      margin: auto;
      padding-top: 20px;
    }
    .container h1 {
      text-align: center;
      font-weight: bold;
      text-transform: uppercase;
      color: tomato;
    }
    .container h1 span {
      font-weight: lighter;
    }
    .input-group {
      margin: 20px;
    }
  </style>
  <div class="container">
    <h1>Add <span>Product</span></h1>
    <form action="/orders" method="POST">
      <div class="form-group">
        <label for="name">Product Name</label>
        <input
          type="text"
          name="name"
          class="form-control"
          placeholder="Product name"
        />
      </div>

      <div class="form-group">
        <label for="type">Product Description</label>
        <input
          type="text"
          class="form-control"
          placeholder="Please enter a product description"
          name="description"
        />
      </div>

      <div class="form-group">
        <label for="type">Product price</label>
        <input
          type="number"
          class="form-control"
          placeholder="Please enter a price"
          name="price"
        />
      </div>

      <div class="input-group">
        <button type="submit" class="btn btn-outline-success w-75 m-auto">
          Add product
        </button>
      </div>
    </form>
  </div>
</div>
